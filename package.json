{
  "name": "terminal-ai-tool",
  "version": "1.1.0",
  "description": "AI-powered terminal command interpreter",
  "main": "dist/index.js",
  "license": "MIT",
  "bin": {
    "ai": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"src/**/*.{json,yaml,yml}\" dist/",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "install:global": "npm run build && chmod +x ./dist/index.js && npm install -g .",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.{ts,json,yaml,yml}\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "ai",
    "terminal",
    "cli",
    "openai",
    "claude",
    "gemini",
    "ollama",
    "assistant"
  ],
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kamrul1157024/terminal-ai"
  },
  "homepage": "https://github.com/kamrul1157024/terminal-ai#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google-cloud/vertexai": "^1.9.3",
    "@google/generative-ai": "^0.24.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "axios": "^1.8.4",
    "better-sqlite3": "^11.9.1",
    "chalk": "4.1.2",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "inquirer": "^12.5.0",
    "marked": "^15.0.7",
    "marked-terminal": "^7.3.0",
    "ollama": "^0.5.14",
    "openai": "^4.91.1",
    "ora": "5.4.1",
    "prettier": "^3.5.3",
    "sqlite3": "^5.1.7",
    "tiktoken": "^1.0.20",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "yaml": "^2.7.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/inquirer": "^9.0.7",
    "@types/marked-terminal": "^6.1.1",
    "@types/uuid": "^10.0.0",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "chokidar": "^4.0.3",
    "copyfiles": "^2.4.1",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2"
  }
}
